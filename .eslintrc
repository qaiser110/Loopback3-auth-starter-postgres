{
  "extends": "loopback",
  "rules": {
    "semi": "off",
    "strict": "off",
    "object-curly-spacing": "off",
    "no-return-assign": "off",
    "global-require": "off",
    "no-console": "off",
    "no-undef": "off",
    "prefer-const": "off",
    "no-param-reassign": "off",
    "no-unused-expressions": 0,
    "class-methods-use-this": "off",
    "func-names": "off",
    "import/no-dynamic-require": "off",
    "no-plusplus": "off",
    "prefer-arrow-callback": "off"
  }
}
